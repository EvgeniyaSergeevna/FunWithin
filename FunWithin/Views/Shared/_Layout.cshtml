<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <title>All Reviews</title>
</head>
<body>
    <div>
        <div class="navbar navbar-dark" style="background-color: darkslategrey;" role="navigation">
            <a asp-action="List" asp-controller="Review" class="navbar-brand">
                &nbsp FunWithin: just leave your procrastination experience here!
            </a>
            <div class="text-right m-2 p-1">
                <a asp-action="LogIn" asp-controller="Account" class="btn btn-outline-light">
                    Log In
                </a>
                <a asp-action="Index" asp-controller="Admin" class="btn btn-outline-light">
                    Personal Page
                </a>
            </div>
        </div>
        <label>Sort by:</label>
        <table class="table">
            <tr>
                
                <th>
                    <a class="text-dark" style="text-decoration: none">
                        @Html.ActionLink("Publication date", "List",
                       new { sortBy = ViewBag.DateSort })
                        </a>
</th>
                <th>
                    @Html.ActionLink("Likes", "List",
                  new { sortBy = ViewBag.LikeSort })
                </th>
            </tr>
        </table>
        <div class="row cm-7">
            <div id="types" class="col-2">
                @await Component.InvokeAsync("NavigationMenu")
            </div>
            <div class="col-9">
                @RenderBody()
            </div>

        </div>
    </div>
</body>
@RenderSection("Scripts", required: false)
</html>