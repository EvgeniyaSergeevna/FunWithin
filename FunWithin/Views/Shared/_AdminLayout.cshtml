<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <title>@ViewBag.Title</title>
    <style>
        .input-validation-error {border-color: darkred; background-color: lightpink;}
    </style>
</head>
<body class="m-1 p-1">
    <div class="navbar navbar-dark" style="background-color: darkslategrey;" role="navigation">
        <a asp-action="List" asp-controller="Review" class="navbar-brand">
            &nbsp FunWithin: just leave your procrastination experience here!
        </a>
        <div class="text-right m-2 p-1">
            <a asp-action="Index" asp-controller="Admin" class="btn btn-outline-light">
                Personal Page
            </a>
        </div>
    </div>
   
    @if (TempData["message"] != null)
    {
        <div class="alert alert-success">@TempData["message"]</div>
    }
    @RenderBody()
</body>
@RenderSection("Scripts", required: false)
</html>