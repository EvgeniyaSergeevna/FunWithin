@model Review
 <!DOCTYPE html>
 <html>
 <head>
     <meta name="viewport" content="width=device-width" />
     <title></title>
 </head>
 <body>
     <h3> @Model.Name </h3>
     <h5>
         <span class="badge bg-light text-dark">
             <small>Author: @Model.Author</small>
         </span>
     </h5>
     <div class="card-text p-1" style="white-space: pre-line">@Model.ReviewText</div>
     <form asp-action="Like" asp-for="Likes" method="post">
         <input type="hidden" name="ID" value="@Model.ID" />
         <button type="submit" class="btn" style="background-color: #e3f2fd">Like!</button>
     </form>
     <form asp-action="Rate" asp-for="ItemGrade" method="post">
         <input type="hidden" name="ID" value="@Model.ID" />
         <select class="form-select" aria-label="Default select grade" name="grade">
             <option value="1">1</option>
             <option value="2">2</option>
             <option value="3">3</option>
             <option value="4">4</option>
             <option value="5">5</option>
         </select>
         <button type="submit" class="btn" style="background-color: #e3f2fd">Rate this @Model.Type!</button>
     </form>
     <span class="badge bg-light text-dark">
         <small>Review author: @Model.ReviewAuthor &nbsp</small>
         <small>&nbsp @Model.Type Grade: @Model.AverageItemGrade </small>
         <small>&nbsp Likes: @Model.Likes </small>
         <small>&nbsp Publication date: @Model.PublicationDate.ToUniversalTime() </small>
     </span>
 </body>
 </html>
